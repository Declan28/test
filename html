ts:
import { Component } from '@angular/core';
import { CommonModule } from '@angular/common';
import { FormsModule } from '@angular/forms'; // Import FormsModule for ngModel

@Component({
  selector: 'app-root',
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.sass'],
  standalone: true,  // Make the component standalone
  imports: [CommonModule, FormsModule] // Add CommonModule and FormsModule to support ngIf, ngFor, and ngModel
})
export class AppComponent {
  file1Name: string = '';
  file2Name: string = '';
  uploadSuccess: boolean = false;
  selectedAction: string = 'identify-differences'; // Default action

  // Event handler for file selection
  onFileSelected(event: any, fileNumber: number) {
    const file: File = event.target.files[0];

    if (file) {
      if (fileNumber === 1) {
        this.file1Name = file.name;
      } else if (fileNumber === 2) {
        this.file2Name = file.name;
      }
    }
  }

  // Event handler for the "Continue" button
  onUpload() {
    if (this.file1Name && this.file2Name) {
      this.uploadSuccess = true;
    } else {
      alert('Please select both files before continuing.');
    }
  }
}
